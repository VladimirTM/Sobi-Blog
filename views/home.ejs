<%- include('./partials/header', { title: 'Sobi\'s Blog', page: 'home' }) %>

<!-- Main Content -->
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            
            <!-- Hero Section -->
            <div class="text-center mb-5">
                <h1 class="display-4 mb-3">Welcome to My Blog</h1>
                <p class="lead text-muted">Sharing thoughts, ideas, and experiences</p>
                <a href="/new-post" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Create New Post
                </a>
            </div>

            <!-- Posts Container -->
            <% if (posts.length > 0) { %>
                <div class="posts-container">
                    <% posts.forEach(post => { %>
                        <div class="post card mb-4 shadow-sm">
                            <div class="card-body">
                                <h2 class="card-title h4 mb-3">
                                    <%= post.title %>
                                </h2>
                                
                                <p class="card-text mb-4">
                                    <%= post.content %>
                                </p>
                                
                                <!-- Post Actions -->
                                <div class="d-flex gap-2 justify-content-end">
                                    <form action="/edit-post/<%= post.id %>" method="get" class="d-inline">
                                        <button type="submit" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-edit me-1"></i>Edit
                                        </button>
                                    </form>
                                    
                                    <form action="/delete-post/<%= post.id %>" method="post" class="d-inline">
                                        <button type="submit" 
                                                class="btn btn-outline-danger btn-sm" 
                                                onclick="return confirm('Are you sure you want to delete this post?')">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <!-- Empty State -->
                <div class="text-center mt-5" id="empty-state">
                    <div class="mb-4">
                        <i class="fas fa-file-alt fa-4x text-muted"></i>
                    </div>
                    <h3 class="text-muted">No posts yet</h3>
                    <p class="text-muted mb-4">
                        Start sharing your thoughts by creating your first blog post!
                    </p>
                    <a href="/new-post" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Create Your First Post
                    </a>
                </div>
            <% } %>
            
        </div>
    </div>
</div>

<%- include('./partials/footer') %>